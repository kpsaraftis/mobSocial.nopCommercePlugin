@using Nop.Core;
@using Nop.Services.Helpers
@using Nop.Web.Framework.Themes
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;

    var isIe8 = userAgentHelper.IsIe8();
    var parentTheme = "DefaultClean";
    //add browser specific CSS files
    if (isIe8)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/ie8.css", parentTheme));
    }
    //add main CSS file
    if (supportRtl)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/styles.rtl.css", parentTheme));
    }
    else
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/styles.css", parentTheme));
    }

    //add jQuery UI css file
    Html.AppendCssFileParts("~/Content/jquery-ui-themes/smoothness/jquery-ui-1.10.3.custom.min.css");

    if (isIe8)
    {
        Html.AddScriptParts("~/Scripts/selectivizr.min.js");
        Html.AddScriptParts("~/Scripts/respond.min.js");
    }
}