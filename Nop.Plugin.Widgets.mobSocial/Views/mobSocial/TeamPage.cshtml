@model Nop.Plugin.WebApi.MobSocial.Models.TeamPage.TeamPageModel

@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    Html.AppendTitleParts(Model.TeamName);

}


<div class="page team-page">
    <div class="page-body">
      
        <div class="team-container">
    
            
    
            <h1>@Model.TeamName</h1>

            <p class="team-description">@Model.TeamDescription</p>
            
            
            
            @foreach (var group in Model.Groups)
            {
                <div class="group-container">
                    <h2>@group.Name</h2>
                    
                    
                    <div class="group-members-container">
                        
                    

                        @foreach (var member in group.Members)
                        {
                            <div class="team-member-picture">
                                <a href="@member.ProfileUrl">
                                    <img src="@member.ThumbnailUrl" alt="@member.DisplayName" title="@member.DisplayName" />
                                    <div class="team-member-name">@member.DisplayName</div>

                                </a>
                                
                            </div>
                        }
        
                        <p class="team-group-description">@group.Description</p>
                    </div>
                            
                </div>
            }
    


        </div>
    </div>
</div>

